<h4>Today's Events (<%= Date.today %>)</h4>
<% @calendars.each do |calendar| %>
   <ul class="collection with-header">
    <li class="collection-header"><h6><%= calendar['summary'] %></h6></li>
    <%= render partial: "/events", locals: { events: calendar['daily_events']} %>
    <% if(calendar['daily_events'].count == 0) %>
      <li class="collection-item">No events for today!</li>
    <%end%>
  </ul>
<%end%>
